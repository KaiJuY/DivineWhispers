# Production Environment Variables for Divine Whispers Backend
# Copy to .env and modify values for your environment

# Database Configuration
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql+asyncpg://postgres:your-secure-database-password-here@db:5432/divine_whispers
DB_PORT=5432

# JWT Security (CRITICAL: Change in production!)
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_SECRETS_TOKEN_HEX_32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=3

# Fortune Service Pricing (in points)
FORTUNE_DRAW_COST=10
FORTUNE_INTERPRET_COST=15
DEFAULT_USER_POINTS=100

# ChromaDB Configuration
CHROMA_COLLECTION_NAME=divine_whispers_poems
FORTUNE_CACHE_TIMEOUT_SECONDS=3600
FORTUNE_JOB_TIMEOUT_SECONDS=300

# LLM Provider Configuration
# Options: openai, ollama, mock
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here

# Application Settings
DEBUG=false
ENVIRONMENT=production
MAX_CONCURRENT_JOBS=5

# Optional: pgAdmin Configuration (development only)
PGADMIN_EMAIL=admin@divinewhispers.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Optional: External Ports
API_PORT=8000